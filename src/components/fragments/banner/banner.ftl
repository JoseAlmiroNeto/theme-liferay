<div class="banner-container w-100 position-relative">
  <lfr-editable id="id-img-web" type="image">
    <img class="banner-img d-none d-md-block w-100" alt="imagem-web" src="" />
  </lfr-editable>

  <lfr-editable id="id-img-mobile" type="image">
    <img class="banner-img d-md-none w-100" alt="imagem-mobile" src="" />
  </lfr-editable>

  <div class="banner-information d-flex flex-column align-items-center align-items-md-start position-absolute text-center text-md-left">
    <lfr-editable id="id-text" type="rich-text">
      <span>
        SUMMER 2023
      </span>
    </lfr-editable>

    <lfr-editable id="id-title" type="rich-text">
      <span style="font-size: 58px; font-weight: bold">
        Titulo
      </span>
    </lfr-editable>

    <lfr-editable id="id-description" type="rich-text">
      <span style="font-size: 20px; max-width: 330px">
        Descrição
      </span>
    </lfr-editable>

    <button class="banner-button border-0 font-weight-bold">
      <lfr-editable id="id-button" type="rich-text">BOTÃO</lfr-editable>
    </button>
  </div>
</div>